<h1 style="margin-left: 80px">Create a new restaurant</h1>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-offset-3>
      <%= simple_form_for(@restaurant) do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :phone_number %>
        <%= f.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"], selected: :chinese %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>

