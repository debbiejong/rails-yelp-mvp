<div class="container">
<h1>Add a review for <%= @restaurant.name %></h1>
  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <%= simple_form_for([@restaurant, @review]) do |f| %>
        <%= f.input :content %>
        <%= f.input :rating, collection: [0, 1, 2, 3, 4, 5] %>
        <%= f.submit "Add a review", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
  <br>
<%= link_to "Back to #{@restaurant.name} restaurant page", restaurant_path(@restaurant) %>
</div>
